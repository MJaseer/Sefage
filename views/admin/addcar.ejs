<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Sefage Register</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.png">

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.css" rel="stylesheet">

</head>

<body class="bg-gradient-dark">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Add a Car!</h1>
                            </div>
                            <form class="user" name="form1" id="myForm" action="/admin/addCar"
                                enctype="multipart/form-data" method="post" onsubmit="return carValidation('hii')">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" name="name" required="true"
                                            class="form-control form-control-user" id="addName" placeholder="Car Name">
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" name="brand" required="true"
                                            class="form-control form-control-user" id="addBrand"
                                            placeholder="Brand Name">
                                    </div>

                                </div>
                                <div class="form-group row ">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" required="true" name="price" id="addPrice" placeholder="Price"
                                            class="form-control form-control-user" />
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <select name="category" class=" form-control-user" id="addCateogry">
                                            <option selected="selected"> Select Category </option>
                                            <% category.forEach(function(cates){ %>
                                                <option value="<%= cates._id%>" class=" form-control-user ">
                                                    <%= cates.category_name%>
                                                </option>
                                                <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row d-flex  justify-content-center">
                                    <div lass="col-sm-6 mb-3 mb-sm-0">
                                        <input type="file" required name="image" id="imageInput" placeholder="image"
                                            multiple class="form-control form-control-user" accept="image/*">
                                    </div>
                                </div>
                                <div id="addError" class="text-center"></div>
                                <button type="submit" value="Add Car" class="btn btn-dark btn-user btn-block">Add
                                    Car</button>>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <script>
        const addNames = document.getElementById('addName')
        const addBrand = document.getElementById('addBrand')
        const addPrice = document.getElementById('addPrice')
        const addCateogry = document.getElementById('addCateogry')

        const addError = document.getElementById('addError')

        console.log("hij"+ addNames.value+addBrand.value);

        function hideErrorMessage() {
            addError.innerHTML = "";
        }

        function showErrorMessage(message) {
            addError.innerHTML = `<div class="alert text-danger bg-none " role="alert">${message}</div>`

        }

        function carValidation(e) {

            if (addNames.value.trim()=="") {
                showErrorMessage("Name must include atleast One letter");
                return false;
            }if (addBrand.value.trim()=="") {
                showErrorMessage("Brand must include atleast one letter");
                return false;
            }
            if (addPrice.value.trim()=="") {
                showErrorMessage("Price must include atleast one number");
                return false;
            }
            if (addCateogry.value.trim() =="") {
                showErrorMessage("Please select a category");
                return false;
            }

            hideErrorMessage()
            return true;
        }


    </script>


    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>
</body>