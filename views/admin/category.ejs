<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Forgot Password</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.png">

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.css" rel="stylesheet">

</head>

<body class="bg-gradient-dark">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="container-fluid">

                                <!-- Page Heading -->
                                <h1 class="h3 mb-2 text-gray-800"></h1>
                                <p class="mb-4"></p>

                                <!-- DataTales Example -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3 d-flex justify-content-between">
                                        <h6 class="m-0 font-weight-bold text-dark   ">Categories</h6>
                                        <h4><a href="/admin"><i class="fa fa-home"></i></a></h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="dataTable" width="100%"
                                                cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Name</th>
                                                    </tr>
                                                </thead>
                                                <tfoot>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Name</th>

                                                    </tr>
                                                </tfoot>
                                                <tbody>
                                                    <%var i=1%>
                                                        <%category.forEach(function(cats){ %>
                                                            <tr>
                                                                <th scope="row">
                                                                    <%= i%>
                                                                </th>
                                                                <td style="color: rgb(77, 77, 77);font-weight: 700;">
                                                                    <%= cats.category_name%>
                                                                </td>
                                                            </tr>
                                                            <%= i++%>
                                                                <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Add Category</h1>
                                        <p class="mb-4">Category!</p>
                                    </div>

                                    <!-- add category -->

                                    <form class="user" action="/admin/categoryPost" method="post"
                                        onsubmit="return (verifyCategory('data'))">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-user" id="addCategory"
                                                aria-describedby="emailHelp" placeholder="Enter Category Name"
                                                name="category">
                                        </div>
                                        <div id="catError"></div>
                                        <div class="text-danger d-flex justify-content-center mb-2">
                                            <%= msg %>
                                        </div>
                                        <input type="submit" value="Add Category"
                                            class="btn btn-dark btn-user btn-block" style="font-weight: bold;">
                                    </form>
                                    <hr>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <script>
        const categoryName = document.getElementById('addCategory')

        const catError = document.getElementById('catError')

        function hideErrorMessage() {
            catError.innerHTML = "";
        }

        function showErrorMessage(message) {
            catError.innerHTML = `<div class="text-danger text-center" role="alert">${message}</div>`
        }

        function verifyCategory(event) {
            if (categoryName.value.trim() == "") {
                showErrorMessage("Category Name must contain atleast one letter");
                return false;
            } else {
                hideErrorMessage()
                return true;
            }


        }
    </script>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>

</body>

</html>